{
	"overrides": [
		{
			"files": "*.ts",
			"options": {
				"semi": true,
				"singleQuote": true,
				"bracketSpacing": true,
				"useTabs": false,
				"trailingComma": "none",
				"arrowParens": "avoid",
				"printWidth": 120
			}
		},
		{
			"files": "*.html",
			"options": {
				"parser": "angular",
				"bracketSameLine": true,
				"htmlWhitespaceSensitivity": "strict",
				"printWidth": 120
			}
		}
	]
}